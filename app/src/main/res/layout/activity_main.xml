<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="@drawable/baseball_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:layout_margin="10dp"
        android:background="@drawable/baseball_ground">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 1. [ 1 2 3 ] - S : 1 B : 1"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="#4DFFFFFF"/>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="16"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_margin="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:background="@drawable/baseball_ball"
            android:text="1"
            android:textSize="70dp"
            android:textStyle="italic"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:background="@drawable/baseball_ball"
            android:text="1"
            android:textSize="70dp"
            android:textStyle="italic"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:background="@drawable/baseball_ball"
            android:text="1"
            android:textSize="70dp"
            android:textStyle="italic"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_margin="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:weightSum="6"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/num_button_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/num_button_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/num_button_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/num_button_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/num_button_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="35sp"/>
        <ImageButton
            android:id="@+id/back_space_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="35sp"
            android:src="@drawable/ic_baseline_backspace_24"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:weightSum="6"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/num_button_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/num_button_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/num_button_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/num_button_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/num_button_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="35sp"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="35sp"
            android:src=""/>

    </LinearLayout>


</LinearLayout>